<h1>Редактирование организации</h1>

<div class="row justify-content-center">
  <div class="col-md-8">
    <%= form_with(model: @organization, remote: true, data: { turbo: false }) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :short_name %>
        <%= form.text_field :short_name, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :inn %>
        <%= form.text_field :inn, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :kpp %>
        <%= form.text_field :kpp, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :address %>
        <%= form.text_area :address, class: "form-control", rows: 3 %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :phone %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Сохранить", class: "btn btn-primary" %>
        <%= link_to "Отмена", organization_path(@organization), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>